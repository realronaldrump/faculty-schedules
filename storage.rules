rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }

    function userHasAdminRole() {
      return isSignedIn() &&
        exists(/databases/(default)/documents/users/$(request.auth.uid)) && (
          (
            get(/databases/(default)/documents/users/$(request.auth.uid)).data.roles is list &&
            'admin' in get(/databases/(default)/documents/users/$(request.auth.uid)).data.roles
          ) || (
            get(/databases/(default)/documents/users/$(request.auth.uid)).data.roles is map &&
            get(/databases/(default)/documents/users/$(request.auth.uid)).data.roles.admin == true
          )
        );
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        userHasAdminRole()
      );
    }

    match /temperature-floorplans/{buildingKey}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
